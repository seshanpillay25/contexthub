# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Universal settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript files
[*.{js,jsx,mjs,cjs}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# PowerShell scripts
[*.ps1]
indent_size = 4

# Python scripts
[*.py]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Package files
[{package.json,package-lock.json}]
indent_size = 2

# Git config files
[.git*]
indent_size = 2